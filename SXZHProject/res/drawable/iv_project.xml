<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
android:state_selected是选中
android:state_focused是获得焦点
android:state_pressed是点击
android:state_enabled是设置是否响应事件,指所有事件
    -->
    <item android:drawable="@drawable/project_on" android:state_pressed="true" />
    <item android:drawable="@drawable/project_on" android:state_selected="true" />
    <item android:drawable="@drawable/project_on" android:state_focused="true" />
    <item android:drawable="@drawable/project_off" />

</selector>