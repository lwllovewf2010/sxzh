<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent" >
       
        <ListView
            android:id="@+id/project_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
       <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/filter_layout"
                android:orientation="vertical"
                android:visibility="gone">

           <LinearLayout
               android:id="@+id/shaixuan_layout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <LinearLayout
                   android:layout_width="fill_parent"
                   android:layout_height="fill_parent"
                   android:layout_weight="1"
                   android:background="#f7f7f7"
                   android:orientation="vertical" >

                   <TextView
                       style="@style/my_project_item_dialog"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/rootall"
                       android:background="#efefef"
                       android:textColor="@color/black"
                       android:text="@string/all_project" />

                   <View
                       android:layout_width="wrap_content"
                       android:layout_height="1px"
                       android:background="@color/line_color" />

                   <TextView
                       style="@style/my_project_item_dialog"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/rootstart"
                       android:text="@string/i_start" />

                   <View
                       android:layout_width="wrap_content"
                       android:layout_height="1px"
                       android:background="@color/line_color" />

                   <TextView
                       style="@style/my_project_item_dialog"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/rootjoin"
                       android:text="@string/i_join" />

                   <View
                       android:layout_width="wrap_content"
                       android:layout_height="1px"
                       android:background="@color/line_color" />
               </LinearLayout>

               <View
                   android:layout_width="1px"
                   android:layout_height="match_parent"
                   android:background="@color/line_color" />

               <LinearLayout
                   android:id="@+id/LinearLayout2"
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:background="#efefef"
                   android:orientation="vertical" >

                   <TextView
                       style="@style/my_project_item_dialog"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/suball"
                       android:text="@string/all_project"
                       android:textColor="@color/black" />

                   <View
                       android:layout_width="wrap_content"
                       android:layout_height="1px"
                       android:background="@color/line_color" />

                   <TextView
                       style="@style/my_project_item_dialog"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/subpreheat"
                       android:text="@string/preheat_project" />

                   <View
                       android:layout_width="wrap_content"
                       android:layout_height="1px"
                       android:background="@color/line_color" />

                   <TextView
                       style="@style/my_project_item_dialog"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/subongoing"
                       android:text="@string/ongoing_project" />

                   <View
                       android:layout_width="wrap_content"
                       android:layout_height="1px"
                       android:background="@color/line_color" />

                   <TextView
                       style="@style/my_project_item_dialog"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/subucce"
                       android:text="@string/ucce_project" />

                   <View
                       android:layout_width="wrap_content"
                       android:layout_height="1px"
                       android:background="@color/line_color" />

                   <TextView
                       style="@style/my_project_item_dialog"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/subfail"
                       android:text="@string/fail_project" />

                   <View
                       android:layout_width="wrap_content"
                       android:layout_height="1px"
                       android:background="@color/line_color" />
               </LinearLayout>
           </LinearLayout>

           <TextView
               android:id="@+id/bg_text"
               android:layout_width="fill_parent"
               android:layout_height="fill_parent"
               android:background="@color/transparent" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>