<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@color/color_efeff4"
    android:orientation="vertical" >

    <com.sanxian.sxzhuanhuan.common.CommonHeader
  	    android:id="@+id/common_header"
  	    android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
  	    />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:orientation="horizontal" >
		
        <ImageView
            android:id="@+id/reg_first_iv" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/reg_first_ing"/>
        <TextView
            android:id="@+id/reg_first_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/reg_first_iv"
            android:layout_centerInParent="true"
            android:textSize="@dimen/size_14"
            android:textColor="@color/color_18af8e"
            android:text="@string/reg_step_first" />
        <ImageView
            android:id="@+id/reg_second_iv" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/reg_first_tv"
            android:src="@drawable/reg_second_no"/>
        <TextView
            android:id="@+id/reg_second_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/reg_second_iv"
            android:layout_centerInParent="true"
            android:textSize="@dimen/size_14"
            android:textColor="@color/color_8e8e93"
            android:text="@string/reg_step_second" />
        <ImageView
            android:id="@+id/reg_third_iv" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/reg_second_tv"
            android:src="@drawable/reg_third_no"/>
        <TextView
            android:id="@+id/reg_third_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/reg_third_iv"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/size_14"
            android:textColor="@color/color_8e8e93"
            android:text="@string/reg_step_third" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="@dimen/size_14"
        android:textColor="@color/color_8e8e93"
        android:text="@string/reg_step_first_info" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/preference_item"
        android:gravity="center" >

        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="5dp"
            android:src="@drawable/login_icon_user"/>

        <EditText
            android:id="@+id/register_et_username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:hint="请输入您的姓名" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/preference_item_last_rect"
        android:gravity="center" >

        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="5dp"
            android:src="@drawable/phone_icon"/>
        
        <EditText
            android:id="@+id/register_et_telephone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLength="11"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:hint="@string/reg_telephone_hint"
            android:inputType="phone" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp" >

        <CheckBox
            android:id="@+id/register_cb_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MyCheckBox"
            android:checked="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/register_tv_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_14"
            android:textColor="@color/color_c7c7cc"
            android:layout_alignBottom="@id/register_cb_agree"
            android:layout_alignBaseline="@id/register_cb_agree"
            android:layout_toRightOf="@id/register_cb_agree"
            android:text="@string/reg_agree" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/register_tv_agree"
            android:layout_alignBottom="@id/register_cb_agree"
            android:layout_alignBaseline="@id/register_cb_agree"
            android:textSize="@dimen/size_14"
            android:textColor="@color/color_444a4d"
            android:text="@string/reg_agree_content" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp" >
	    <Button
	        android:id="@+id/register_next"
	        android:layout_width="fill_parent"
	        android:layout_height="48dp"
	        android:layout_gravity="center"
	        android:background="@drawable/common_back"
	        android:gravity="center"
	        android:textColor="@color/color_ffffff"
	        android:textSize="@dimen/size_18"
	        android:text="下一步" />
	    <TextView
	        android:id="@+id/register_tv_how_get_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/register_next"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/size_14"
            android:textColor="@color/color_444a4d"
            android:text="@string/reg_invite" />
	</RelativeLayout>
</LinearLayout>