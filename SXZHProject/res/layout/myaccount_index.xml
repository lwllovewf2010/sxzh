<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/white"  >
<include layout="@layout/title_bar"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/preson_data_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="4dip"
        android:paddingBottom="4dip"
        android:background="@drawable/my_account_item_selector">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="@string/preson_data_table"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            />
         <ImageView
            android:id="@+id/arrow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:background="@drawable/arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
         <ImageView
            android:id="@+id/preson_img"             
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:background="@drawable/default_avatar" 
            android:layout_toLeftOf="@id/arrow1"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            />
    </RelativeLayout>
        <View
         android:layout_width="fill_parent"
         android:layout_height="1sp"
         android:background="@color/line_color"
        />
      <RelativeLayout
        android:id="@+id/invitation_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="15dip"
        android:paddingBottom="15dip"
        android:background="@drawable/my_account_item_selector"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="@string/invitation_table"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            />
         <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:background="@drawable/arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View
         android:layout_width="fill_parent"
         android:layout_height="1sp"
         android:background="@color/line_color"
        />
      <RelativeLayout
        android:id="@+id/erweima_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="15dip"
        android:paddingBottom="15dip"
        android:background="@drawable/my_account_item_selector"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="@string/erweima_table"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            />
         <ImageView
            android:id="@+id/arrow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:background="@drawable/arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
      <View
         android:layout_width="fill_parent"
         android:layout_height="1sp"
         android:background="@color/line_color"
        />
      <RelativeLayout
        android:id="@+id/my_account_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="15dip"
        android:paddingBottom="15dip"
        android:background="@drawable/my_account_item_selector">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="@string/my_account_table"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            />
         <ImageView
            android:id="@+id/arrow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:background="@drawable/arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
      <View
         android:layout_width="fill_parent"
         android:layout_height="1sp"
         android:background="@color/line_color"
        />
</LinearLayout>

</LinearLayout>