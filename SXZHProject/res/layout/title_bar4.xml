<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:background="@drawable/tongyong_top"
    android:gravity="center_vertical" >

    <!-- 头部为了可重用 ，用linearLayout设置 -->

    <LinearLayout
        android:id="@+id/top_left_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dip"
        android:layout_weight="1.6"
        android:orientation="vertical"
        android:textSize="15sp" >

        <Button
            android:id="@+id/title_Left"
            android:layout_width="wrap_content"
            android:layout_height="34.5dip"
            android:background="@drawable/titlebar_left_btn_selector"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="18dp"
            android:paddingRight="10dp"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:layout_weight="1.5"
        android:gravity="center" >

        <Button
            android:id="@+id/near_people"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/sixin_icon"
            android:visibility="gone" >
        </Button>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="标题"
                android:textColor="@android:color/white"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/tvTitleIndo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="第一步"
                android:textColor="@android:color/white"
                android:textSize="10.0sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_right_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dip"
        android:layout_weight="1.6"
        android:gravity="right"
        android:orientation="vertical" >

        <Button
            android:id="@+id/title_right"
            android:layout_width="wrap_content"
            android:layout_height="34.5dip"
            android:background="@drawable/titlebar_right_btn_selector"
            android:gravity="center"
            android:paddingLeft="11.4dp"
            android:paddingRight="11dp"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>