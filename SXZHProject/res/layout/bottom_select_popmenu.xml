<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tongyong_duihuakuang_beijing"
        android:orientation="vertical" >

        <Button
            android:id="@+id/take_photo_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:background="@drawable/send_qunliao_selector"
            android:padding="5dip"
            android:text="@string/take_photo_btn_table"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/album_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:background="@drawable/sixin_cancel_selector"
            android:padding="5dip"
            android:text="@string/album_btn_table"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:background="@drawable/sixin_cancel_selector"
            android:padding="5dip"
            android:text="@string/cancel_btn_table"
            android:textColor="@color/gray"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>