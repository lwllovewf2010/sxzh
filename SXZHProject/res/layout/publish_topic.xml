<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >
	<include layout="@layout/title_bar" android:id="@+id/publish_topic_bar"/>
	
	<RelativeLayout android:id="@+id/publish_topic_content"
	    			android:layout_width="fill_parent"
	    			android:layout_height="wrap_content"	
	    			android:layout_below="@+id/publish_topic_bar"    			
	    			android:orientation="vertical"
	    >
	    <EditText android:id="@+id/publish_topic_topic_title"
	        	  android:layout_width="fill_parent"
	        	  android:layout_height="wrap_content"
	        	  android:hint="@string/publish_topic_title"
	        	  android:layout_marginLeft="10dip"
	        	  android:layout_marginRight="10dip"
	        	  android:layout_marginTop="5dip"
	        	  android:background="@drawable/ic_setting_item_round_normal" 
	        />
	    <RelativeLayout android:id="@+id/publish_topic_topic_type_rel"
	        	  android:layout_below="@+id/publish_topic_topic_title"
	        	  android:layout_width="fill_parent"
	        	  android:layout_height="wrap_content"	        	 
	        	  android:layout_marginLeft="10dip"
	        	  android:layout_marginRight="10dip"
	        	  android:layout_marginTop="5dip"
	        	  android:background="@drawable/ic_setting_item_round_normal" 
	        >
	        <TextView android:id="@+id/publish_topic_type"
	            android:layout_width="wrap_content"
	            	  android:layout_height="wrap_content"
	            	  android:layout_alignParentLeft="true"
	            	  android:textColor="@color/black"
	            	  android:layout_centerVertical="true"
	            	  android:text="@string/publish_originality_type"
	            />
	        <ImageView android:layout_width="wrap_content"
	            		android:layout_height="wrap_content"
	            		android:layout_alignParentRight="true"
	            		android:layout_centerVertical="true"
	            		android:src="@drawable/arrow"
	            />
	    </RelativeLayout>
	   <RelativeLayout android:id="@+id/publish_topic_topic_area_rel"
	       android:layout_below="@+id/publish_topic_topic_type_rel"
	        	  android:layout_width="fill_parent"
	        	  android:layout_height="wrap_content"	        	 
	        	  android:layout_marginLeft="10dip"
	        	  android:layout_marginRight="10dip"
	        	  android:layout_marginTop="5dip"
	        	  android:background="@drawable/ic_setting_item_round_normal" 
	        >
	       <TextView android:id="@+id/publish_topic_eara" 
	           android:layout_width="wrap_content"
	            	  android:layout_height="wrap_content"
	            	  android:layout_alignParentLeft="true"
	            	  android:layout_centerVertical="true"
	            	  android:textColor="@color/black"
	            	  android:text="@string/publish_originality_eara"
	            />
	        <ImageView android:layout_width="wrap_content"
	            		android:layout_height="wrap_content"
	            		android:layout_alignParentRight="true"
	            		android:src="@drawable/arrow"
	            		android:layout_centerVertical="true"
	            />
	       
	   </RelativeLayout>
	    <RelativeLayout android:id="@+id/publish_topic_topic_profession_rel"
	        android:layout_below="@+id/publish_topic_topic_area_rel"
	        	  android:layout_width="fill_parent"
	        	  android:layout_height="wrap_content"
	        	  android:layout_marginLeft="10dip"
	        	  android:layout_marginRight="10dip"	        	  
	        	  android:layout_marginTop="5dip"
	        	  android:background="@drawable/ic_setting_item_round_normal" 
	        >
	        <TextView android:layout_width="wrap_content"
	            android:id="@+id/publish_topic_profession"
	            	  android:layout_height="wrap_content"
	            	  android:layout_alignParentLeft="true"
	            	  android:layout_centerVertical="true"
	            	  android:textColor="@color/black"
	            	  android:text="@string/publish_originality_profession"
	            />
	        <ImageView android:layout_width="wrap_content"
	            		android:layout_height="wrap_content"
	            		android:layout_alignParentRight="true"
	            		android:layout_centerVertical="true"
	            		android:src="@drawable/arrow"
	            />
	        
	    </RelativeLayout>
	    
	    
	     
	     <EditText android:id="@+id/publish_topic_topic_detailed_introduce"
	        	  android:layout_below="@+id/publish_topic_topic_profession_rel"
	        	  
	        	  android:layout_width="fill_parent"
	        	  android:layout_height="130dip"
	        	  android:hint="@string/publish_topic_detailed_introduce"
	        	  android:layout_marginLeft="10dip"
	        	  android:layout_marginRight="10dip"
	        	  android:layout_marginTop="5dip"
	        	  android:singleLine="false"
	        	  android:scrollbars="vertical"
	        	  android:gravity="top"
	        />
	     
	     <LinearLayout android:id="@+id/publish_topic_xieyi_lin"
	         		   android:layout_below="@+id/publish_topic_topic_detailed_introduce"
	         		   android:layout_width="fill_parent"
	         		   android:layout_height="wrap_content"
	         		   android:layout_marginLeft="10dip"
	        	  	   android:layout_marginRight="10dip"
	        	  	   android:layout_marginTop="5dip"	 
	        	  	   android:orientation="horizontal"
	        	  	   android:gravity="center_vertical"
	         >
	         <CheckBox android:id="@+id/publish_topic_xieyi" 	        	 
	        	  android:layout_width="wrap_content"
	        	  android:layout_height="wrap_content"	        	  
	        />
	     
	    	<TextView android:id="@+id/publish_topic_xieyi_text" 
	        	  android:layout_width="wrap_content"
	        	  android:layout_height="wrap_content"
	        	  android:text="@string/publish_topic_xieyi"
	        	  android:textColor="@color/black"
	        />	         
	     </LinearLayout>
	     
	      <Button android:id="@+id/publish_topic_submit"
	              android:layout_below="@+id/publish_topic_xieyi_lin"
	          	  android:layout_width="fill_parent"
	          	  android:layout_height="wrap_content"
	          	  android:text="@string/publish_submit"
	          	  android:background="@drawable/ic_setting_item_round_normal" 
	          	  android:layout_marginLeft="10dip"
	        	  android:layout_marginRight="10dip"
	        	  android:layout_marginTop="5dip"
	        	  android:layout_marginBottom="5dip"
	          />
	     
	    
	</RelativeLayout>
	
</RelativeLayout>
