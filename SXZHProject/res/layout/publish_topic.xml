<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <include
        android:id="@+id/publish_topic_bar"
        layout="@layout/title_bar" />

    <LinearLayout
        android:id="@+id/publish_topic_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/publish_topic_bar"
        android:orientation="vertical"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip" >

        <EditText
            android:id="@+id/publish_topic_topic_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:background="@drawable/ic_setting_item_round_normal"
            android:hint="@string/publish_topic_title"
            android:maxLength="10"
            android:singleLine="true" />

        <RelativeLayout
            android:id="@+id/publish_topic_topic_type_rel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:background="@drawable/ic_setting_item_round_normal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/publish_topic_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/publish_originality_type"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/arrow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow" />
             <TextView
                android:id="@+id/publish_topic_type"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/arrow1"
                android:layout_toRightOf="@id/publish_topic_table"
                android:text=""
                android:layout_marginRight="10dip"
                android:layout_marginLeft="10dip"
                android:gravity="right"
                android:textColor="@color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/publish_topic_topic_area_rel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:background="@drawable/ic_setting_item_round_normal" >

            <TextView
                android:id="@+id/topic_eara_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/publish_originality_eara"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/arrow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow" />
            <TextView
                android:id="@+id/publish_topic_eara"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/black" 
                android:layout_toLeftOf="@id/arrow2"
                android:layout_toRightOf="@id/topic_eara_table"
                android:layout_marginRight="10dip"
                android:layout_marginLeft="10dip"
                android:gravity="right"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/publish_topic_topic_profession_rel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:background="@drawable/ic_setting_item_round_normal" >

            <TextView
                android:id="@+id/topic_profession_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/publish_originality_profession"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/arrow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow" />
             <TextView
                android:id="@+id/publish_topic_profession"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/black" 
                android:layout_toLeftOf="@id/arrow3"
                android:layout_toRightOf="@id/topic_profession_table"
                android:layout_marginRight="10dip"
                android:layout_marginLeft="10dip"
                android:gravity="right"/>
            
        </RelativeLayout>

        <EditText
            android:id="@+id/publish_topic_topic_detailed_introduce"
            android:layout_width="fill_parent"
            android:layout_height="130dip"
            android:layout_marginTop="5dip"
            android:gravity="top"
            android:hint="@string/publish_topic_detailed_introduce"
            android:scrollbars="vertical"
            android:singleLine="false" 
            android:maxLength="1000"/>

        <LinearLayout
            android:id="@+id/publish_topic_xieyi_lin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/publish_topic_xieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />

            <TextView
                android:id="@+id/publish_topic_xieyi_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/publish_topic_xieyi"
                android:textColor="@color/black" />
        </LinearLayout>

        <Button
            android:id="@+id/publish_topic_submit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/ic_setting_item_round_normal"
            android:text="@string/publish_submit" />
    </LinearLayout>

</RelativeLayout>