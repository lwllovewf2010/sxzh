<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout android:id="@+id/home_index_list_top"
        		  android:layout_width="fill_parent"
        		  android:layout_height="wrap_content"
        		  android:orientation="horizontal"
        >
        <TextView android:id="@+id/home_index_list_top_content"
            	  android:layout_width="wrap_content"
            	  android:layout_height="wrap_content" 
            	  android:text="这是一个很好的项目" 
            	  android:layout_marginTop="5dip"
            	  android:layout_marginBottom="5dp"	  
            />
    </LinearLayout>
	<RelativeLayout android:id="@+id/home_index_list_content"
	    			android:layout_width="fill_parent"
	    			android:layout_height="wrap_content"
	    			android:layout_below="@+id/home_index_list_top"
	    >
	    <ImageView android:id="@+id/home_index_list_image"
	        	   android:layout_width="100dip"
	        	   android:layout_height="60dip"
	        	   android:src="@drawable/ic_launcher"
	        	   android:layout_marginTop="5dip"  
	        	   android:layout_marginRight="15dip"   	   
	        />
	    
	    <TextView android:id="@+id/home_index_list_right_text"
	        	  android:layout_width="150dip"
	        	  android:layout_height="wrap_content"
	        	  android:layout_toRightOf="@+id/home_index_list_image" 
	        	  android:layout_alignParentRight="true"
	        	  android:text="这是一段详细介绍这是一段详细介绍这是一段详细介绍这是一段详细介绍这是一段详细介绍这是一段详细介绍这是一段详细介绍这是一段详细介绍"		
	        	    	 
	        />
	    
	    <ProgressBar  
	        android:layout_marginTop="15dip"
	        android:layout_marginLeft="5dip"
	        android:layout_marginRight="5dip"
    		android:id="@+id/home_index_progressBar" 
    		android:layout_width="fill_parent"  
    		android:layout_height="5dip"  
    		style="?android:attr/progressBarStyleHorizontal" 
    		android:max="100" 
    		android:progress="100" 
    		android:secondaryProgress="100" 
    		android:layout_below="@+id/home_index_list_image"
    		
    /> 
    <LinearLayout android:id="@+id/home_index_button_bar"
        		  android:layout_width="fill_parent"
        		  android:layout_height="wrap_content"
        		  android:layout_below="@+id/home_index_progressBar"
        		  android:orientation="horizontal"
        		  android:layout_marginTop="10dip"
        		  
        >
	        <LinearLayout android:id="@+id/home_index_button_bar1"
	        		  android:layout_width="fill_parent"
	        		  android:layout_height="wrap_content"	        		 
	        		  android:orientation="horizontal"
	        		  android:layout_weight="1"
	        		  android:gravity="center_vertical"
	        >
	        	<ImageView android:layout_width="25dip"
	        	    	   android:layout_height="25dip"
	        	    	   android:src="@drawable/ic_launcher"
	        	    />
	        	<TextView android:layout_width="wrap_content"
	        	    	  android:layout_height="wrap_content"
	        	    	  android:text="257人"	
	        	    />
	        </LinearLayout>
			<LinearLayout android:id="@+id/home_index_button_bar2"
	        		  android:layout_width="fill_parent"
	        		  android:layout_height="wrap_content"	        		 
	        		  android:orientation="horizontal"
	        		  android:layout_weight="1"
	        		  android:gravity="center_vertical"
	        >
			    <ImageView android:layout_width="25dip"
	        	    	   android:layout_height="25dip"
	        	    	   android:src="@drawable/ic_launcher"
	        	    />
	        	<TextView android:layout_width="wrap_content"
	        	    	  android:layout_height="wrap_content"
	        	    	  android:text="257人"	
	        	    />
			</LinearLayout>
	        <LinearLayout android:id="@+id/home_index_button_bar3"
	        		  android:layout_width="fill_parent"
	        		  android:layout_height="wrap_content"	        		  
	        		  android:orientation="horizontal"
	        		  android:layout_weight="1"
	        		  android:gravity="center_vertical"
	        >
	            <ImageView android:layout_width="25dip"
	        	    	   android:layout_height="25dip"
	        	    	   android:src="@drawable/ic_launcher"
	        	    />
	        	<TextView android:layout_width="wrap_content"
	        	    	  android:layout_height="wrap_content"
	        	    	  android:text="257人"	
	        	    />
	        </LinearLayout>
	        <LinearLayout android:id="@+id/home_index_button_bar4"
	        		  android:layout_width="fill_parent"
	        		  android:layout_height="wrap_content"	        		 
	        		  android:orientation="horizontal"
	        		  android:layout_weight="1"
	        		  android:gravity="center_vertical"
	        >
	        	<ImageView android:layout_width="25dip"
	        	    	   android:layout_height="25dip"
	        	    	   android:src="@drawable/ic_launcher"
	        	    />
	        	<TextView android:layout_width="wrap_content"
	        	    	  android:layout_height="wrap_content"
	        	    	  android:text="257人"	
	        	    />
    		</LinearLayout>
        
    </LinearLayout>
	    
	</RelativeLayout>
    
    
</RelativeLayout>
