<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:background="@drawable/tongyong_top"
    android:gravity="center_vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="36dp" >

        <LinearLayout
            android:id="@+id/sort_head_ll_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edit_search_bg" >

            <Spinner
                android:id="@+id/sort_head_spinner"
                android:layout_width="100dp"
                android:layout_height="36dp"
                android:drawSelectorOnTop="true"
                android:animationCache="true"
                android:entries="@array/sorts" />

            <EditText
                android:id="@+id/sort_head_etfilter"
                android:layout_width="150dp"
                android:layout_height="38dp"
                android:layout_gravity="left|center"
                android:layout_marginLeft="-3dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="输入搜索内容"
                android:imeOptions="actionSearch"
                android:singleLine="true" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/sort_head_ivsearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5.0dp"
            android:background="@drawable/frame_icon_search" />

        <Button
            android:id="@+id/sort_head_btn_search_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/sort_head_ll_search"
            android:layout_marginRight="2dp"
            android:textSize="12sp"
            android:text="取消"
            android:visibility="gone"
            />
    </RelativeLayout>

</LinearLayout>