<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PublishComment"
    android:background="@color/white"
     >
	<include layout="@layout/title_bar" android:id="@+id/publish_comment_bar"/>
   	<RelativeLayout android:id="@+id/publish_comment_top_rel"
   	    				android:layout_below="@+id/publish_comment_bar"
	        			android:layout_marginLeft="10dip"
	        			android:layout_marginTop="10dip"
	        			android:layout_marginRight="10dip"
	        			android:layout_width="fill_parent"
	        			android:layout_height="wrap_content"

	        >
	        <TextView android:id="@+id/topic_content_comment_title"
	            	  android:text="@string/publish_comment_manner"
	            	  android:layout_width="wrap_content"
	            	  android:layout_height="wrap_content"
	            	  android:textColor="@color/black"	            	 
	            	  android:textSize="15sp"
	            />        
	    </RelativeLayout>
		<LinearLayout android:id="@+id/publish_comment_toupiao_linear"
   	    				android:layout_below="@+id/publish_comment_top_rel"
	        			android:layout_marginLeft="10dip"
	        			android:layout_marginTop="10dip"
	        			
	        			android:layout_width="fill_parent"
	        			android:layout_height="wrap_content"
					    android:orientation="horizontal"
	        >
	         <LinearLayout 
   	    				android:layout_weight="1"
	        			android:layout_width="fill_parent"
	        			android:layout_height="wrap_content"
					    android:orientation="horizontal"
	        	>
	        	 <RadioButton android:id="@+id/publish_commnet_kanhao"
	        	    		 android:layout_width="wrap_content"
	        	    		 android:layout_height="wrap_content"
	        	    		 android:text="@string/topic_content_describe_kanhao"
	        	    		 android:textColor="@color/black"
	        	    />
	        </LinearLayout>
		    <LinearLayout 
   	    				android:layout_weight="1"
	        			android:layout_width="fill_parent"
	        			android:layout_height="wrap_content"
					    android:orientation="horizontal"
	        	>
	        	 
		         <RadioButton android:id="@+id/publish_commnet_bukanhao"
	        	    		 android:layout_width="wrap_content"
	        	    		 android:layout_height="wrap_content"
	        	    		 android:text="@string/topic_content_describe_bukanhao"
	        	    		 android:textColor="@color/black"
	        	    />
	        	 
	        </LinearLayout>
	        <LinearLayout 
   	    				android:layout_weight="1"
	        			android:layout_width="fill_parent"
	        			android:layout_height="wrap_content"
					    android:orientation="horizontal"
	        	>
	        	   <RadioButton android:id="@+id/publish_commnet_buqingchu"
	        	    		 android:layout_width="wrap_content"
	        	    		 android:layout_height="wrap_content"
	        	    		 android:text="@string/topic_content_describe_shoubuqingchu"
	        	    		 android:textColor="@color/black"
	        	    />
	        </LinearLayout>
		    
	    </LinearLayout>
	    
		
		<RelativeLayout android:id="@+id/publish_comment_content_rel"
   	    				android:layout_below="@+id/publish_comment_toupiao_linear"
	        			android:layout_marginLeft="10dip"
	        			android:layout_marginTop="10dip"
	        			android:layout_marginRight="10dip"
	        			android:layout_width="fill_parent"
	        			android:layout_height="wrap_content"

	        >
	        <TextView android:id="@+id/topic_content_comment_content_title"
	            	  android:text="@string/publish_comment_title_content"
	            	  android:layout_width="wrap_content"
	            	  android:layout_height="wrap_content"
	            	  android:textColor="@color/black"	            	 
	            	  android:textSize="15sp"
	            />        
	    </RelativeLayout>
		
		
		
		<RelativeLayout android:id="@+id/publish_comment_content_edit_rel"
   	    				android:layout_below="@+id/publish_comment_content_rel"
	        			android:layout_marginLeft="10dip"
	        			android:layout_marginTop="10dip"
	        			android:layout_marginRight="10dip"
	        			android:layout_width="fill_parent"
	        			android:layout_height="wrap_content"

	        >
	        <EditText android:id="@+id/topic_content_comment_content"	            	 
	            	  android:layout_width="fill_parent"
	            	  android:layout_height="200dip"
	            	  android:hint="@string/publish_comment_content"     		 
	            	  android:gravity="top"
	            />        
	    </RelativeLayout>
		
		
		
	    <Button android:id="@+id/topic_content_comment_content_submit"	 
	        		  android:layout_below="@+id/publish_comment_content_edit_rel"           	 
	            	  android:layout_width="fill_parent"
	            	  android:layout_height="wrap_content"
	            	  android:hint="@string/publish_comment_content_submit"     		 
	            	  android:layout_marginLeft="10dip"
	        		  android:layout_marginTop="10dip"
	        		  android:layout_marginRight="10dip"
	        		  android:background="@drawable/ic_setting_item_round_normal"
	    />        
	   
</RelativeLayout>
