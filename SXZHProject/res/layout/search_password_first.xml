<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@color/color_efeff4"
    android:orientation="vertical" >
        
    <com.sanxian.sxzhuanhuan.common.CommonHeader
  	    android:id="@+id/common_header"
  	    android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
  	    />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:gravity="left"
        android:text="请输入手机号码"
        android:textSize="@dimen/size_18" />

    <EditText
        android:id="@+id/search_pwd_et_telephone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:gravity="left|center"
        android:maxLength="11"
        android:hint="输入11位手机号"
        android:inputType="phone"
        android:textSize="@dimen/size_14" />

    <TextView
        android:id="@+id/search_pwd_tv_show_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:gravity="left"
        android:text="请输入手机验证码"
        android:textSize="@dimen/size_18" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/search_pwd_et_vertify_code"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:hint="输入6位验证码"
            android:maxLength="6"
            android:textSize="@dimen/size_14" />

        <Button
            android:id="@+id/search_pwd_btn_get_vertify_code"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:background="@drawable/find_pwd_icon"
            android:textSize="@dimen/size_18"
            android:text="获取验证码" />
    </LinearLayout>

    <Button
        android:id="@+id/search_pwd_btn_next"
        style="@style/wel_page_txt"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/common_back"
        android:gravity="center"
        android:textSize="@dimen/size_18"
        android:text="下一步" />

</LinearLayout>