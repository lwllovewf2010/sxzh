<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:id="@+id/sort_detail_item_list_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkcyan"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sort_detail_item_list_top_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dip"
            android:maxLines="1"
            android:text="NewsZeit - Google Reader 的完美替代" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/sort_detail_item_list_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sort_detail_item_list_top" >

        <ImageView
            android:id="@+id/sort_detail_item_list_image"
            android:layout_width="150dip"
            android:layout_height="60dip"
            android:layout_marginTop="5dip"
            android:layout_alignRight="@id/sort_detail_item_list_top"
            android:src="@drawable/image2" />

        <TextView
            android:id="@+id/sort_detail_item_list_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/sort_detail_item_list_image"
            android:maxLines="4"
            android:gravity="left|center"
            android:text="这是一段详" />

        <ProgressBar
            android:id="@+id/sort_detail_item_progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/sort_detail_item_list_image"
            android:layout_margin="5dip"
            android:max="100"
            android:progress="30"
            android:secondaryProgress="100" />

        <LinearLayout
            android:id="@+id/sort_detail_item_button_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sort_detail_item_progressBar"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/sort_detail_item_button_bar1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/sort_detail_item_ivParticipate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/groupico" />

                <TextView
                    android:id="@+id/sort_detail_item_tvParticipate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="257人"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sort_detail_item_button_bar2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/sort_detail_item_ivDiscuss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/groupico" />

                <TextView
                    android:id="@+id/sort_detail_item_tvDiscuss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="42讨论"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sort_detail_item_button_bar3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/sort_detail_item_ivDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/groupico" />

                <TextView
                    android:id="@+id/sort_detail_item_tvDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18天"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sort_detail_item_button_bar4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/sort_detail_item_ivMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/groupico" />

                <TextView
                    android:id="@+id/sort_detail_item_tvMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥123，456"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>