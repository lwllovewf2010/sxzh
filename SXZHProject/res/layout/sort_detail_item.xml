<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/sort_detail_item_list_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sort_detail_item_list_top_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dip"
            android:text="NewsZeit - Google Reader 的完美替代" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/sort_detail_item_list_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sort_detail_item_list_top" >

        <ImageView
            android:id="@+id/sort_detail_item_list_image"
            android:layout_width="150dip"
            android:layout_height="60dip"
            android:layout_marginTop="5dip"
            android:src="@drawable/image2" />

        <TextView
            android:id="@+id/sort_detail_item_list_right_text"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/sort_detail_item_list_image"
            android:layout_toRightOf="@+id/sort_detail_item_list_image"
            android:text="这是一段详细介绍这是一段详细介绍这是一段详细介绍这是一段详细介绍
            这是一段详细介绍这是一段详细介绍这是一段详细介绍这是一段详细介绍" />

        <ProgressBar
            android:id="@+id/sort_detail_item_progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sort_detail_item_list_image"
            android:layout_margin="5dip"
            android:max="100"
            android:progress="100"
            android:secondaryProgress="100" />

        <LinearLayout
            android:id="@+id/sort_detail_item_button_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sort_detail_item_progressBar"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/sort_detail_item_button_bar1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sort_detail_item_ivParticipate"
                    android:src="@drawable/groupico" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sort_detail_item_tvParticipate"
                    android:text="257人" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sort_detail_item_button_bar2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sort_detail_item_ivDiscuss"
                    android:src="@drawable/groupico" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sort_detail_item_tvDiscuss"
                    android:text="42讨论" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sort_detail_item_button_bar3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sort_detail_item_ivDays"
                    android:src="@drawable/groupico" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sort_detail_item_tvDays"
                    android:text="18天" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sort_detail_item_button_bar4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sort_detail_item_ivMoney"
                    android:src="@drawable/groupico" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sort_detail_item_tvMoney"
                    android:text="￥123，456" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>