<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"  >
   <include layout="@layout/title_bar"></include>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="@drawable/person_bg_box" 
       android:layout_marginTop="10dip"
       android:layout_marginRight="10dip"
       android:layout_marginLeft="10dip">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal" 
           android:layout_marginLeft="10dip"
           android:layout_marginRight="10dip"
           android:paddingTop="11dip"
           android:paddingBottom="11dip">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="@string/current_passw_table"
               style="@style/myaccount_bind_phone_text"/>

           <EditText
               android:id="@+id/old_password"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="0.6"
               android:text=""
               android:textSize="17sp" 
               android:maxLength="15"
               android:singleLine="true"
               android:textColor="@color/black"
               android:inputType="textPassword"
               android:background="@null"
                />
       </LinearLayout>
       <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />
       
              <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginLeft="10dip"
           android:layout_marginRight="10dip"
           android:paddingTop="11dip"
           android:paddingBottom="11dip" >

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="@string/new_passw_table" 
               style="@style/myaccount_bind_phone_text"/>

           <EditText
               android:id="@+id/new_password"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="0.6"
               android:text=""
               android:hint="@string/set_password_suggest"
               android:background="@null"
               android:textSize="17sp" 
               android:maxLength="15"
               android:singleLine="true" 
               android:inputType="textPassword"
               android:textColor="@color/black"/>
       </LinearLayout>
        <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />
       
           <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginLeft="10dip"
           android:layout_marginRight="10dip"
           android:paddingTop="11dip"
           android:paddingBottom="11dip" >

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="@string/confirm_passw_table"
               style="@style/myaccount_bind_phone_text" />

           <EditText
               android:id="@+id/confirm_new_password"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="0.6"
               android:text="" 
               android:background="@null"
               android:inputType="textPassword"
               android:textSize="17sp" 
               android:maxLength="15"
               android:singleLine="true"
               android:textColor="@color/black"/>
       </LinearLayout>
   </LinearLayout>
   
   <Button
       android:id="@+id/save_loginpw_button"
       android:layout_marginTop="30dip"
       android:layout_width="match_parent"
       android:layout_height="50dip"
       android:layout_marginLeft="10dip"
       android:layout_marginRight="10dip"
       android:text="@string/save_table"
       android:textColor="#fff"
       android:textSize="22sp"
       android:background="@drawable/button_tongyong1"
       />
</LinearLayout>