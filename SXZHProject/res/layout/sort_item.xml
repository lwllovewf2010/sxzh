<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/transparent"
    android:orientation="vertical" >
    
	<ImageView
        android:id="@+id/sort_iv_logo"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/sort_click_num" />
	
	<TextView
        android:id="@+id/sort_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sort_iv_logo"
        android:layout_toRightOf="@+id/sort_iv_logo"
        android:text="服装内衣"
        android:textColor="#000000"
        android:textSize="18dp" />
	
	<TextView
        android:id="@+id/sort_tv_sortchild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sort_tv_name"
        android:layout_alignBottom="@+id/sort_iv_logo"
        android:layout_toRightOf="@+id/sort_iv_logo"
        android:gravity="bottom"
        android:text="棉衣|针织衫|毛呢外套|羽绒服|T恤"
        android:textColor="#434443"
        android:textSize="12dp" />
    
</RelativeLayout>