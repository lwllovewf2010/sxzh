<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@color/color_efeff4"
    android:orientation="vertical" >

    <com.sanxian.sxzhuanhuan.common.CommonHeader
  	    android:id="@+id/common_header"
  	    android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
  	    />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:orientation="horizontal" >
		
        <ImageView
            android:id="@+id/reg_first_iv" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/reg_ok"/>
        <TextView
            android:id="@+id/reg_first_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/reg_first_iv"
            android:layout_centerInParent="true"
            android:textSize="@dimen/size_14"
            android:textColor="@color/color_18af8e"
            android:text="@string/reg_step_first" />
        <ImageView
            android:id="@+id/reg_second_iv" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/reg_first_tv"
            android:src="@drawable/reg_ok"/>
        <TextView
            android:id="@+id/reg_second_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/reg_second_iv"
            android:layout_centerInParent="true"
            android:textSize="@dimen/size_14"
            android:textColor="@color/color_18af8e"
            android:text="@string/reg_step_second" />
        <ImageView
            android:id="@+id/reg_third_iv" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/reg_second_tv"
            android:src="@drawable/reg_third_ing"/>
        <TextView
            android:id="@+id/reg_third_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/reg_third_iv"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/size_14"
            android:textColor="@color/color_18af8e"
            android:text="@string/reg_step_third" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/preference_item"
        android:gravity="center" >

        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="5dp"
            android:src="@drawable/login_icon_user"/>

        <EditText
            android:id="@+id/register_et_account"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/size_14"
            android:background="@null"
            android:hint="@string/reg_et_account_hint" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/preference_item_last_rect"
        android:gravity="center" >

        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="5dp"
            android:src="@drawable/login_icon_pwd"/>

        <EditText
            android:id="@+id/register_et_set_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/size_14"
            android:background="@null"
            android:hint="@string/reg_et_set_password_hint"
            android:inputType="textPassword" />
        
    </LinearLayout>

    <Button
        android:id="@+id/register_btn_register"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@drawable/common_back"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:textSize="@dimen/size_18"
        android:textColor="@color/color_ffffff"
        android:text="@string/reg_register" />

</LinearLayout>