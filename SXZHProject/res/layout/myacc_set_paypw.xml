<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"  >
   <include layout="@layout/title_bar"></include>

   <!-- 设置支付密码 -->
   <LinearLayout
       android:id="@+id/set_paypw_layout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical" 
       android:paddingTop="10dip"
       android:paddingLeft="10dip"
       android:paddingRight="10dip">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal" >

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/set_pay_password"
               android:textSize="17sp"
               android:textColor="@color/black" />

           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text=""
               android:textSize="17sp"
               android:maxLength="15" 
               android:hint="@string/set_password_suggest"
               android:inputType="textPassword"
               android:textColor="@color/black" >
           </EditText>
       </LinearLayout>
       
           <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal" >

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/confirm_pay_password" 
               android:textSize="17sp"
               android:textColor="@color/black" />

           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text=""
               android:textSize="17sp"
               android:maxLength="15" 
               android:inputType="textPassword"  
               android:textColor="@color/black">
           </EditText>
       </LinearLayout>
   </LinearLayout>
   
   <!-- 修改支付密码 -->
   <LinearLayout
        android:id="@+id/modify_paypw_layout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="@drawable/person_bg_box" 
       android:layout_marginTop="10dip"
       android:layout_marginRight="10dip"
       android:layout_marginLeft="10dip"
       android:visibility="gone">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal" 
           android:layout_marginLeft="10dip"
           android:layout_marginRight="10dip"
           android:paddingTop="10dip"
           android:paddingBottom="10dip">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="@string/current_pay_password"
               android:textSize="17sp"
               android:textColor="@color/black" />

           <EditText
               android:id="@+id/current_pay_password"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="0.7"
               android:text=""
               android:textSize="17sp" 
               android:maxLength="15"
               android:singleLine="true"
               android:textColor="@color/black"
               android:inputType="textPassword"
               android:background="@null"
                />
       </LinearLayout>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/person_big_box_line"
           />
       
           <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginLeft="10dip"
           android:layout_marginRight="10dip"
           android:paddingTop="10dip"
           android:paddingBottom="10dip" >

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="@string/new_pay_password" 
               android:textSize="17sp"
               android:textColor="@color/black" />

           <EditText
               android:id="@+id/new_pay_password"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="0.7"
               android:text=""
               android:hint="@string/set_password_suggest"
               android:background="@null"
               android:textSize="17sp" 
               android:maxLength="15"
               android:singleLine="true" 
               android:inputType="textPassword"
               android:textColor="@color/black"/>
       </LinearLayout>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/person_big_box_line"
           />
       
           <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginLeft="10dip"
           android:layout_marginRight="10dip"
           android:paddingTop="10dip"
           android:paddingBottom="10dip" >

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="@string/confirm_pay_password"
               android:textSize="17sp"
               android:textColor="@color/black"  />

           <EditText
               android:id="@+id/modify_confirm_pay_password"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="0.7"
               android:text="" 
               android:background="@null"
               android:inputType="textPassword"
               android:textSize="17sp" 
               android:maxLength="15"
               android:singleLine="true"
               android:textColor="@color/black"/>
       </LinearLayout>
   </LinearLayout>
   
   <Button
       android:id="@+id/save_paypw_button"
       android:layout_marginTop="30dip"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dip"
       android:layout_marginRight="10dip"
       android:text="@string/save_table"
       android:textColor="#fff"
       android:textSize="22sp"
       android:background="@drawable/button_tongyong1"
       />
</LinearLayout>