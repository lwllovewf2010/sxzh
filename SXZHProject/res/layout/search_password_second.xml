<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <com.sanxian.sxzhuanhuan.common.CommonTitle
        android:id="@+id/common_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:gravity="left"
        android:text="输入新密码:"
        android:textSize="23sp" />

    <EditText
        android:id="@+id/search_pwd_et_new_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:gravity="left|center"
        android:hint="输入新密码"
        android:inputType="textPassword"
        android:textSize="@dimen/reg_text_size" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:text="输入确认密码:"
        android:textSize="23sp" />

    <EditText
        android:id="@+id/search_pwd_et_new_password_commit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:gravity="left|center"
        android:hint="输入确认密码"
        android:inputType="textPassword"
        android:textSize="@dimen/reg_text_size" />

    <Button
        android:id="@+id/search_pwd_btn_change_password"
        style="@style/wel_page_txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/login_btn"
        android:gravity="center"
        android:text="更改密码"
        android:textSize="@dimen/reg_text_size" />

</LinearLayout>