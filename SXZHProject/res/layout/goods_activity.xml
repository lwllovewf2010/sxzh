<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relativeLayout1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/project_pic1"
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/image1" />
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <TextView
                        android:id="@+id/project_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:text="L-Remote 智慧遥控器"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/btn_share"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/share_pic" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="现金 ￥" />

                        <TextView
                            android:id="@+id/cash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="139.00" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="50dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="原价 ￥" />

                        <TextView
                            android:id="@+id/original_cost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="189.00" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/express"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="快递￥15.00元"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/express_addr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="山东 济南-北京"
                        android:textSize="12dp" />
                </LinearLayout>

                <include
                    android:layout_height="75dip"
                    android:layout_marginLeft="10dp"
                    layout="@layout/goods_vertical_line" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/collection_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="118"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收藏人气"
                        android:textSize="12dp" />
                </LinearLayout>

                <include
                    android:layout_height="75dip"
                    android:layout_marginLeft="10dp"
                    layout="@layout/goods_vertical_line" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/sale_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="57个"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="三十天内售出"
                        android:textSize="12dp" />
                </LinearLayout>

                <include
                    android:layout_height="75dip"
                    android:layout_marginLeft="10dp"
                    layout="@layout/goods_vertical_line" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/sale_info"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="促销信息：限时打8折，剩1天3小时28分结束"
                    android:textSize="12dp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/goods_buy_border"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="颜色："
                        android:textSize="20dp" />

                    <RadioGroup
                        android:id="@+id/radioGroup1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/radio10"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:checked="true"
                            android:button="@null"
                            android:background="@drawable/radio_button_style"
                            android:textColor="@color/black"
                            android:text="白色" />

                        <RadioButton
                            android:id="@+id/radio11"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:button="@null"
                            android:background="@drawable/radio_button_style"
                            android:textColor="@color/black"
                            android:text="蓝色" />

                        <RadioButton
                            android:id="@+id/radio12"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:button="@null"
                            android:background="@drawable/radio_button_style"
                            android:textColor="@color/black"
                            android:text="灰色" />
                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="大小："
                        android:textSize="20dp" />

                    
                    <RadioGroup
                        android:id="@+id/radioGroup2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/radio20"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:checked="true"
                            android:button="@null"
                            android:background="@drawable/radio_button_style"
                            android:textColor="@color/black"
                            android:text="小号" />

                        <RadioButton
                            android:id="@+id/radio21"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:button="@null"
                            android:background="@drawable/radio_button_style"
                            android:textColor="@color/black"
                            android:text="中号" />

                        <RadioButton
                            android:id="@+id/radio22"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:button="@null"
                            android:background="@drawable/radio_button_style"
                            android:textColor="@color/black"
                            android:text="大号" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/goods_num_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/goods_desc_num"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:onClick="dellwithbuttons"
                        android:src="@drawable/goods_desc_button" />

                    <TextView
                        android:id="@+id/goods_num"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="20dp" />

                    <ImageButton
                        android:id="@+id/goods_add_num"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:onClick="dellwithbuttons"
                        android:src="@drawable/goods_add_button" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="（库存123件）"
                        android:textSize="20dp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="3px"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/goods_add_shopping"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/red"
                        android:onClick="dellwithbuttons"
                        android:paddingBottom="5dip"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:paddingTop="5dip"
                        android:text="加入购物车" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/goods_detail_relative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dip"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="5dip" >

                    <TextView
                        android:id="@+id/goods_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dip"
                        android:text="@string/goods_details"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dip"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dip"
                        android:text="@string/consumer_comments"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color" />

                <RelativeLayout
                    android:id="@+id/goods_param_relative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dip"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dip"
                        android:text="@string/goods_param"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/arrow" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="原项目：" />

                    <TextView
                        android:id="@+id/project_describe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="项目名称是一段文字啊一段文字" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/join_custemer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="参与用户：" />

                        <TextView
                            android:id="@+id/join_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/join_custemer"
                            android:text="234人" />

                        <Button
                            android:id="@+id/goods_show_project"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:layout_alignParentRight="true"
                            android:onClick="dellwithbuttons"
                            android:text="查看项目" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="也许您还喜欢：" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="4dp"
                        android:layout_height="100dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" >

                            <ImageView
                                android:id="@+id/adver1_pic"
                                android:layout_width="100dip"
                                android:layout_height="100dip"
                                android:clickable="true"
                                android:src="@drawable/image1" />

                            <TextView
                                android:id="@+id/adver1_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/image1"
                                android:layout_alignParentRight="true"
                                android:text="￥136.00" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/adver1_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Google Reader" />
                    </LinearLayout>

                    <View
                        android:layout_width="4dp"
                        android:layout_height="100dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" >

                            <ImageView
                                android:id="@+id/adver2_pic"
                                android:layout_width="100dip"
                                android:layout_height="100dip"
                                android:clickable="true"
                                android:src="@drawable/image1" />

                            <TextView
                                android:id="@+id/adver2_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/image2"
                                android:layout_alignParentRight="true"
                                android:text="￥136.00" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/adver2_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Google Reader" />
                    </LinearLayout>

                    <View
                        android:layout_width="4dp"
                        android:layout_height="100dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" >

                            <ImageView
                                android:id="@+id/adver3_pic"
                                android:layout_width="100dip"
                                android:layout_height="100dip"
                                android:clickable="true"
                                android:src="@drawable/image1" />

                            <TextView
                                android:id="@+id/adver3_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/image3"
                                android:layout_alignParentRight="true"
                                android:text="￥136.00" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/adver3_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Google Reader" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="55dip"
        android:layout_alignParentBottom="true"
        android:background="#808080" >

        <LinearLayout
            android:id="@+id/goods_bottom_ll"
            android:layout_width="fill_parent"
            android:layout_height="55dip"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <!-- 首页start -->

                <ImageView
                    android:id="@+id/goods_back"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:onClick="dellwithbuttons"
                    android:scaleType="fitXY"
                    android:src="@drawable/back" />

                <Button
                    android:id="@+id/goods_buy"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:onClick="dellwithbuttons"
                    android:text="立即购买"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/home_menu"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:src="@drawable/yuanzhu" />

                <ImageView
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_alignTop="@+id/home_menu"
                    android:layout_toLeftOf="@+id/home_menu"
                    android:clickable="true"
                    android:src="@drawable/star" />

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>